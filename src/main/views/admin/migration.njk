                    or request.query.resource_state is not defined %}selected{% endif %}>
              Unresolved
            </option>
          <option value="ready" {% if request.query.resource_state == 'ready' %}selected{% endif %}>Ready</option>
          <option value="submitted" {% if request.query.resource_state == 'submitted' %}selected{% endif %}>Submitted</option>
          <option value="success" {% if request.query.resource_state == 'success' %}selected{% endif %}>Success</option>
        </select>
      </div>
    </div>

    <div class="govuk-grid-column-one-quarter">
      <div class="govuk-form-group">
        <label class="govuk-label" for="failure-reason">Failure reason</label>
        <select class="govuk-select" id="failure-reason" name="reasonIn" style="width: 100%;">
          <option value="" {% if not request.query.reasonIn %}selected{% endif %}></option>
          <option value="Incomplete_Data" {% if request.query.reasonIn == 'Incomplete_Data' %}selected{% endif %}>Incomplete Data</option>
          <option value="Invalid_Format" {% if request.query.reasonIn == 'Invalid_Format' %}selected{% endif %}>Invalid Format</option>
          <option value="Not_Most_Recent" {% if request.query.reasonIn == 'Not_Most_Recent' %}selected{% endif %}>Not Most Recent</option>
          <option value="Pre_Go_Live" {% if request.query.reasonIn == 'Pre_Go_Live' %}selected{% endif %}>Pre Go Live</option>
          <option value="Pre_Existing" {% if request.query.reasonIn == 'Pre_Existing' %}selected{% endif %}>Pre Existing</option>
          <option value="Validation_Failed" {% if request.query.reasonIn == 'Validation_Failed' %}selected{% endif %}>Validation Failed</option>
          <option value="Alternative_Available" {% if request.query.reasonIn == 'Alternative_Available' %}selected{% endif %}>Alternative Available</option>
          <option value="General_Error" {% if request.query.reasonIn == 'General_Error' %}selected{% endif %}>General Error</option>
          <option value="Test" {% if request.query.reasonIn == 'Test' %}selected{% endif %}>Test</option>
