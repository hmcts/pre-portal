#!groovy

@Library("Infrastructure")

def type = "nodejs"
def product = "pre"
def component = "portal"



def secrets = [
  'pre-hmctskv-${env}':
    [
      secret('pre-portal-sso', 'B2C_APP_CLIENT_SECRET'),
      secret('b2c-test-login-email', 'B2C_TEST_LOGIN_EMAIL'),
      secret('b2c-test-login-password', 'B2C_TEST_LOGIN_PASSWORD')
    ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [ $class: 'AzureKeyVaultSecret',
    secretType: 'Secret',
    name: secretName,
    version: '',
    envVariable: envVar
  ]
}

def yarnBuilder = new uk.gov.hmcts.contino.YarnBuilder(this)

withPipeline(type, product, component) {
  disableLegacyDeployment()
  loadVaultSecrets(secrets)
  syncBranchesWithMaster(['perftest', 'ithc', 'demo'])
  enableSlackNotifications('#pre-builds')
  afterSuccess('build') {
    yarnBuilder.yarn('rebuild puppeteer')
    yarnBuilder.yarn('build')
  }
}
